{
  "id": 0,
  "name": "football",
  "api": {
    "type": "request_multiple_custom",
    "use_loop_as_key": true,
    "steps_value": [
      "Spiele",
      "Tabelle"
    ],
    "requests": [
      {
        "type": "request",
        "url_pattern": "https://www.openligadb.de/api/getmatchdata/bl1"
      },
      {
        "type": "request",
        "url_pattern": "https://www.openligadb.de/api/getbltable/bl1/2019"
      }
    ]
  },
  "transform": [
    {
      "type": "append",
      "key": "_req|Spiele|0|Group|GroupName",
      "new_key": "_req|Spieltag"
    },
    {
      "type": "transform_array",
      "array_key": "_req|Spiele",
      "transform": [
        {
          "type": "select",
          "relevant_keys": [
            "Team1|TeamName",
            "Team1|TeamId",
            "Team2|TeamName",
            "Team2|TeamId",
            "MatchIsFinished",
            "MatchDateTime",
            "MatchResults|0|PointsTeam1",
            "MatchResults|0|PointsTeam2"
          ],
          "skip_when_not_exists": true
        },
        {
          "type": "alias",
          "keys": [
            "_loop|MatchResults|0"
          ],
          "new_keys": [
            "_loop|MatchResults"
          ],
          "skip_when_not_exists": true
        },
        {
          "type": "date_weekday",
          "keys": [
            "_loop|MatchDateTime"
          ],
          "new_keys": [
            "_loop|weekday"
          ],
          "given_format": "%Y-%m-%dT%H:%M:%S"
        }
      ]
    },
    {
      "type": "transform_array",
      "array_key": "_req|Tabelle",
      "transform": [
        {
          "type": "select",
          "relevant_keys": [
            "TeamName",
            "TeamInfoId",
            "Points",
            "Won",
            "Lost",
            "GoalDiff"
          ]
        },
        {
          "type": "alias",
          "keys": [
            "_loop|TeamInfoId"
          ],
          "new_keys": [
            "_loop|TeamId"
          ]
        }
      ]
    }
  ],
  "images": {
    "football1": {
      "type": "pillow",
      "path": "football/Spieltag.png",
      "overlay": [
        {
          "description": "Liga-Name",
          "type": "text",
          "anchor_point": "center",
          "pos_x": 305,
          "pos_y": 48,
          "preset": "weather_white_2",
          "pattern": "Test"
        }
      ]
    },
    "football2": {
      "type": "pillow",
      "already-created": true,
      "path": "football1",
      "overlay": [
        {
          "description": "Liga-Name",
          "type": "text",
          "anchor_point": "center",
          "pos_x": 305,
          "pos_y": 480,
          "preset": "weather_white_2",
          "pattern": "Test2"
        }
      ]
    }
  },
  "audio": {
    "config": {
      "lang": "de",
      "format": "mp3"
    },
    "audios": {
    }
  },
  "sequence": [
  ],
  "run_config": {
    "testing": {
      "default_value": false,
      "possible_values": [
        true,
        false
      ]
    }
  },
  "presets": {
    "weather_white_2": {
      "color": "white",
      "font_size": 70,
      "font": "fonts/Dosis-Bold.ttf"
    }
  }
}