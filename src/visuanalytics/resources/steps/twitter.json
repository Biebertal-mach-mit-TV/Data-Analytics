{
  "id": 1,
  "name": "twitter",
  "info": "Das Video enthält eine Wordcloud zu aus den meist verwendeten Hashtags zu ausgewählten Hashtags",
  "api": {
    "type": "request",
    "api_key_name": "twitter",
    "url_pattern": "https://api.twitter.com/1.1/search/tweets.json",
    "params": {
      "count": "100",
      "lang": "de",
      "result_type": "recent"
    },
    "params_array": [
      {
        "key": "q",
        "array": "_conf|hashtags",
        "pattern": "%23{_loop}",
        "delimiter": "+"
      }
    ],
    "headers": {
      "Authorization": "Bearer {_api_key}"
    }
  },
  "transform": [
    {
      "type": "split_string",
      "keys": [
        "_conf|size_wordcloud"
      ],
      "delimiter": "x",
      "ignore_case": true
    },
    {
      "type": "convert",
      "keys": [
        "_conf|size_wordcloud|0",
        "_conf|size_wordcloud|1"
      ],
      "new_keys": [
        "_conf|width_wordcloud",
        "_conf|height_wordcloud"
      ],
      "to": "int"
    },
    {
      "type": "transform_array",
      "array_key": "_req|statuses",
      "transform": [
        {
          "type": "select",
          "array_key": "statuses",
          "relevant_keys": [
            "entities|hashtags"
          ]
        },
        {
          "type": "transform_array",
          "array_key": "_loop|entities|hashtags",
          "transform": [
            {
              "type": "select",
              "array_key": "hashtags",
              "relevant_keys": [
                "text"
              ]
            },
            {
              "type": "append",
              "keys": [
                "_loop|text"
              ],
              "new_keys": [
                "_req|text_all"
              ]
            }
          ]
        }
      ]
    },
    {
      "type": "delete",
      "keys": [
        "_req|search_metadata",
        "_req|statuses"
      ]
    },
    {
      "type": "check_key",
      "keys": [
        "_req|text_all"
      ],
      "init_with": "$_conf|hashtags"
    },
    {
      "type": "remove_from_list",
      "keys": [
        "_req|text_all"
      ],
      "to_remove": "_conf|stopwords",
      "use_stopwords": true,
      "ignore_case": true
    },
    {
      "type": "option",
      "check": "_conf|normalize_words",
      "on_true": [
        {
          "type": "normalize_words",
          "keys": [
            "_req|text_all"
          ]
        }
      ]
    },
    {
      "type": "most_common",
      "keys": [
        "_req|text_all"
      ],
      "include_count": true
    },
    {
      "type": "sub_lists",
      "array_key": "_req|text_all",
      "sub_lists": [
        {
          "new_key": "_req|text_top1",
          "range_start": 0,
          "range_end": 1
        },
        {
          "new_key": "_req|text_top2",
          "range_start": 0,
          "range_end": 2
        },
        {
          "new_key": "_req|text_top3",
          "range_start": 0,
          "range_end": 3
        },
        {
          "new_key": "_req|text_top4",
          "range_start": 0,
          "range_end": 4
        },
        {
          "new_key": "_req|text_top5",
          "range_start": 0,
          "range_end": 5
        },
        {
          "new_key": "_req|text_top6",
          "range_start": 0,
          "range_end": 6
        },
        {
          "new_key": "_req|text_top7",
          "range_start": 0,
          "range_end": 7
        },
        {
          "new_key": "_req|text_top8",
          "range_start": 0,
          "range_end": 8
        },
        {
          "new_key": "_req|text_top9",
          "range_start": 0,
          "range_end": 9
        },
        {
          "new_key": "_req|text_top10",
          "range_start": 0,
          "range_end": 10
        },
        {
          "new_key": "_req|text_top15",
          "range_start": 0,
          "range_end": 15
        },
        {
          "new_key": "_req|text_top20",
          "range_start": 0,
          "range_end": 20
        },
        {
          "new_key": "_req|text_top25",
          "range_start": 0,
          "range_end": 25
        }
      ]
    },
    {
      "type": "to_dict",
      "keys": [
        "_req|text_all",
        "_req|text_top1",
        "_req|text_top2",
        "_req|text_top3",
        "_req|text_top4",
        "_req|text_top5",
        "_req|text_top6",
        "_req|text_top7",
        "_req|text_top8",
        "_req|text_top9",
        "_req|text_top10",
        "_req|text_top15",
        "_req|text_top20",
        "_req|text_top25"
      ],
      "new_keys": [
        "_req|dict_all",
        "_req|dict_top1",
        "_req|dict_top2",
        "_req|dict_top3",
        "_req|dict_top4",
        "_req|dict_top5",
        "_req|dict_top6",
        "_req|dict_top7",
        "_req|dict_top8",
        "_req|dict_top9",
        "_req|dict_top10",
        "_req|dict_top15",
        "_req|dict_top20",
        "_req|dict_top25"
      ]
    },
    {
      "type": "length",
      "keys": [
        "_conf|hashtags"
      ],
      "new_keys": [
        "_req|hashtags_len"
      ]
    },
    {
      "type": "join",
      "keys": [
        "_conf|hashtags"
      ],
      "new_keys": [
        "_req|text_hashtags"
      ],
      "delimiter": ", "
    }
  ],
  "images": {
