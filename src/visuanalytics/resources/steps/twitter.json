{
  "id": 1,
  "name": "twitter",
  "api": {
    "type": "request",
    "api_key_name": "twitter",
    "url_pattern": "https://api.twitter.com/1.1/search/tweets.json?",
    "params": {
      "q": "%23Bundesliga",
      "count": "10",
      "lang": "de",
      "result_type": "recent"
    },
    "headers": {
      "Authorization": "Bearer {_api_key}"
    }
  },
  "transform": [
    {
      "type": "transform_array",
      "array_key": "_req|statuses",
      "transform": [
        {
          "type": "select",
          "array_key": "statuses",
          "relevant_keys": [
            "entities|hashtags"
          ]
        },
        {
          "type": "transform_array",
          "array_key": "_loop|entities|hashtags",
          "transform": [
            {
              "type": "select",
              "array_key": "hashtags",
              "relevant_keys": [
                "text"
              ]
            },
            {
              "type": "append",
              "key": "_loop|text",
              "new_key": "_req|text",
              "ignore_errors": true,
              "new_key_is_string": true
            }
          ]
        }
      ]
    },
    {
      "type": "delete",
      "keys": [
        "_req|search_metadata",
        "_req|statuses"
      ]
    }
  ],
  "storing": [
  ],
  "images": {
    "football_wordcloud": {
      "type": "wordcloud",
      "wordcloud": [
        {
          "type": "wordcloud",
          "text": "_req|text",
          "part_length": 7,
          "stopwords": "und",
          "parameter": {
            "mask": {
              "x": 1000,
              "y": 1000,
              "figure": "circle"
            },
            "background_color": "black",
            "width": 1920,
            "height": 1080,
            "collocations": false,
            "max_font_size": 400,
            "max_words": 2000,
            "contour_width": 3,
            "contour_color": "black",
            "interpolation": "bilinear"
          }
        }
      ]
    },
    "wordcloud_with_background": {
      "type": "pillow",
      "path": "football/Matchday.png",
      "overlay": [
        {
          "description": "Wordcloud",
          "type": "prev_image",
          "pos_x": 500,
          "pos_y": 10,
          "color": "RGBA",
          "icon_name": "football_wordcloud",
          "transparency": false
        }
      ]
    }
  },
  "audio": {
    "audios": {
      "a0": {
        "parts": [
          {
            "type": "text",
            "pattern": "Twitter-Wordcloud. "
          }
        ]
      },
      "a1": {
        "parts": [
          {
            "type": "text",
            "pattern": "Auf Twitter wurden folgende Hashtags neben dem Bundesliga Hashtag verwendet. "
          }
        ]
      }
    }
  },
  "sequence": {
    "type": "successively"
  },
  "run_config": [
    {
    }
  ],
  "presets": {
  }
}