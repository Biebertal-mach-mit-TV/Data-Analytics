  "audio": {
    "audios": {
      "a1": {
        "parts": [
          {
            "type": "text",
            "pattern": "Twitter-Wordcloud. "
          },
          {
            "type": "compare",
            "value_left": "_req|hashtags_len",
            "value_right": 1,
            "on_equal": [
              {
                "type": "text",
                "pattern": "Auf Twitter wurden folgende Hashtags neben dem {_req|text_hashtags} Hashtag verwendet. "
              }
            ],
            "on_higher": [
              {
                "type": "text",
                "pattern": "Auf Twitter wurden folgende Hashtags neben den Hashtags {_req|text_hashtags} verwendet"
              }
            ]
          }
        ]
      }
    }
  },
