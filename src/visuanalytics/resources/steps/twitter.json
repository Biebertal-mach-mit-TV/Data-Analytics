        "time_diff": 2
      },
      {
        "image": "wordcloud_all",
        "time_diff": 5
      }
    ]
  },
  "run_config": {
    "hashtags": {
      "type": "multi_string",
      "display_name": "Hashtags (z. B.: Bundesliga, Fußball)",
      "optional": false,
      "default_value": []
    },
    "stopwords": {
      "type": "multi_string",
      "display_name": "Stoppwörter (z. B.: Bundesliga, Fußball)",
      "optional": true,
      "default_value": []
    },
    "background_image": {
      "type": "enum",
      "display_name": "Hintergrund",
      "optional": true,
      "enum_values": [
        {
          "value": "backgrounds/white.png",
          "display_value": "Weiß"
        },
        {
          "value": "backgrounds/black.png",
          "display_value": "Schwarz"
        },
        {
